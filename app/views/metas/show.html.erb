<h1>Meta:<%= @meta.nombre%></h1>
<p><%= @meta.descripcion%></p>

<% if @tareas == nil || @tareas.size == 0%>

	<h3>Sin tareas</h3>

<% else %>

<% @tareas.each do |tarea| %>
	<div style="background-color: #e9e9e9">
		<p>tarea: <%= tarea.nombre%></p>
		<p>id: <%= tarea.id%></p>
	</div>
<% end %>
<% end %>