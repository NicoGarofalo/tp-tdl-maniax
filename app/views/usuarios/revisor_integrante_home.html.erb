<h1>Mis Tareas</h1>
<table class="table table-bordered mt-5">
  <thead>
    <tr>
      <th class="col-1">ID</th>
      <th class="col-3">Tarea</th>
      <th class="col-2">Fecha de entrega</th>
      <th class="col-3">Proyecto</th>
      <th class="col-2">Estado</th>
      <th class="col-1">Revisor</th>
    </tr>
  </thead>
  <tbody>
    <% @tareas.each do |tarea| %>
      <tr>
        <td><%= tarea.id %></td>
        <td><%= tarea.nombre %></td>
        <td><%= tarea.fecha_vencimiento %></td>
        <td>Proyecto 1</td>
        <td><%= tarea.estado %></td>
        <td><%= tarea.revisor.nombre %></td>
      </tr>
    <% end %>
  </tbody>
</table>